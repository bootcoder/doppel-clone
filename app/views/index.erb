<% if session[:id] == nil %>
  <ul>
      <% 3.times do%>
        <% offset = 1 + rand(Twit.count) %>
        <li class="twitblocklist"><%= Twit.find(offset).content%></li>
      <% end %>
  </ul>
<% else %>
  <h1>Welcome! </h1>
  <ul>
  <% User.all.each do |user| %>
    <li class="blocklist"><a href="/users/<%= user.username %>"><%= user.username %></a></li>
  <% end %>
  </ul>
<% end %>